<% content_for :head do %>
  <%= stylesheet_link_tag "jRating.jquery" %>
<% end %>

<%= form_for([:admin,@shop,@rate], :html => { :class=> "form-horizontal uni"}) do |f| %>
  <div class="control-group">
    <%= f.hidden_field :rank %>
    <div id="rate_star" class="controls" data-average="<%= @rate.rank %>"></div>
  </div>
  <div class="control-group">
    <%= f.label :comment, "评论", class: "control-label"%>
    <div class="controls">
      <%= f.text_area :comment %>
    <div>
  </div>
  <div class="actions">
    <%= f.submit "保存", class: "btn btn-small btn-primary" %>
    <%= link_to "返回", admin_shop_rates_path, class: "btn btn-small" %>
  </div>
<% end %>

<% content_for :foot do %>
  <%= javascript_include_tag "jRating.jquery" %>
  <script type="text/javascript">
    $(document).ready(function() {

      var options = {
        bigStarsPath: '/assets/jRating/stars.png',
        smallStarsPath: '/assets/jRating/small.png',
        type : 'big',
        decimalLength: 0,
        length: 5,
        rateMax: 5,
        showRateInfo: false,
        sendRequest: false,
        step: true,
        canRateAgain: true,
        nbRates: 100,

        onClick: function(element, rate){
          $("#rate_rank").val(rate);
        }
      }

      $("#rate_star").jRating(options);
    });
  </script>
<% end %>
