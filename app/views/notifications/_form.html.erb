<%= form_for(@notification, :html => { :class=> "form-horizontal uni" }) do |f| %>
  <div class="control-group">
    <%= f.label :receiver, "发送给" %><br />
    <div class="controls">
      <%= f.select :receiver, view_all_user, :selected => @notification.receiver %>
    </div>
  </div>
  <div class="control-group">
     <%= f.label :title, "标题" %><br />
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>
   <div class="control-group">
     <%= f.label :content, "内容" %><br />
    <div class="controls">
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "保存", class: "btn btn-small btn-primary" %>
    <%= link_to "返回", notifications_path, class: "btn btn-small" %>
  </div>
<% end %>