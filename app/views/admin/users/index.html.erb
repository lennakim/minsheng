<div class="row-fluid">
  <div class="widget">
    <div class="widget-head">
      <div class="pull-left">用户管理</div>
      <div class="widget-icons pull-right">
        <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
        <a href="#" class="wclose"><i class="icon-remove"></i></a>
      </div>
      <div class="clearfix"></div>
    </div>

    <div class="widget-content">

      <div id='notices_container'>
        <table class="table table-bordered table-striped table-hover">
          <tr>
            <th>用户名</th>
            <th>邮箱</th>
            <th>登录时间</th>
            <th>操作</th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, '/admin/users/'+user.id.to_s %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.to_date %></td>
              <td><% if can? :edit_role, user %>
                <%= link_to "修改权限", "/admin/users/#{user.id}/edit_role" %>
                <% end %>
                </td>
            </tr>
          <% end %>
        </table>
      </div>


      <div class="widget-foot">
        <div class="pagination pull-right">
          <ul>
            <li><a href="#">Prev</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">Next</a></li>
          </ul>
        </div>
        <div class="clearfix"></div>
      </div>

    </div>
  </div>
</div>
