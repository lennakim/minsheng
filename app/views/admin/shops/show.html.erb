<div class="row-fluid">
  <div class="span12">
    <div class="widget">

      <div class="widget-head">
        <div class="pull-left">查看商店</div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <%= @shop.id %>
        <p>
          <b>标题:</b>
          <%= @shop.title %>
        </p>

        <p><b>电话:</b> <%= @shop.phone %></p>

        <p>
          <b>地址:</b>
          <%= @shop.address %>
        </p>
        <p>
          <b>标签:</b>
          <%= @shop.tag_list %>
        </p>
        <p>
          <b>图片</b>
          <% @shop.shopImages.each do |image| %>
            <img src="<%= image.url %>" alt="" />
          <% end %>
        </p>

        <%= link_to '编辑', edit_admin_shop_path(@shop), class: 'btn btn-small btn-primary' %>
        <%= link_to '返回', admin_shops_path, class: 'btn btn-small' %>
        <% if can? :new, :rate %>
          |<%= link_to '新点评', new_admin_shop_rate_path(@shop) %>
        <% end %>
        <div class="rates" style="margin-top:20px;">
          <%= render 'admin/rates/rate_list', :rates => @rates %>
        </div>
      </div>
    </div>
  </div>
</div>

