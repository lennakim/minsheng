<%= hidden_field_tag :id, notice.id %>

<div class="control-group">
  <%= f.label :title, "标题：", class: "control-label" %>
  <div class="controls">
    <%= f.text_field :title, style: "width: 300px;" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :tag_type, "类型：", class: "control-label" %>
  <div class="controls">
    <%= f.select :tag_type, Notice::TAG_TYPE.to_a, {include_blank: true}, style: "width: 220px;" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :issue_time, "发布时间：", class: "control-label" %>
  <div class="controls">
    <%= f.text_field :issue_time, value: format_datetime(notice.issue_time), style: "width: 300px;" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :finish, "结束时间：", class: "control-label" %>
  <div class="controls">
    <%= f.text_field :finish_time, value: format_datetime(notice.finish_time), style: "width: 300px;" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :content, "内容：", class: "control-label" %>
  <div class="controls">
    <%= f.text_area :content %>
  </div>
</div>

<div class="text-center">
  <%= f.submit "保存", class: "_submit btn btn-primary btn-small" %>
  &nbsp;
  <%= link_to "取消", admin_notices_path, class: "_cancel btn btn-small" %>
</div>
