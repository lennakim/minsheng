<% content_for :head do %>
  <%= stylesheet_link_tag "lib/jRating.jquery" %>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="widget">
      <div class="widget-head">
        <div class="pull-left">查看评论</div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <p><b>用户:</b><%= @rate.user.name %></p>
        <p><b>评分:</b><div class="star" data-average="<%= @rate.rank ||= 0 %>" ></div></p>
        <p><b>评论:</b><%= @rate.comment %></p>

        <a href="javascript:history.go(-1);" class="btn btn-small">返回</a>
      </div>
    </div>
  </div>
</div>
<% content_for :foot do %>
  <%= javascript_include_tag "lib/jRating.jquery" %>
  <%= javascript_include_tag "minsheng/rates.js" %>
<% end %>