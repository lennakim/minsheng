<%= form_for(@notification) do |f| %>
  <div class="field">
    <%= f.label :receiver, "发送给" %><br />
    <%= f.select :receiver, view_all_user, :selected => @notification.receiver %>
  </div>
  <div class="field">
    <%= f.label :title, "标题" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content,"内容" %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :expire_at, "失效日期" %><br />
    <%= f.text_field :expire_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
