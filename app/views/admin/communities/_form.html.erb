
<%= form_for([:admin, @district, @community], :html => { :class=> "form-horizontal uni" }) do |f| %>
  <div class="control-group">
    <%= f.label :name, "名称", class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, "地址", class: 'control-label' %>
    <div class="controls">
    <%= f.text_field :address %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, "备注", class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "保存", class: "btn btn-small btn-primary" %>
    <%= link_to "返回", admin_district_communities_path, class: "btn btn-small" %>
  </div>
<% end %>