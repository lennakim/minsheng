<div class="content">
    <div class="topbar">
      <form action="" method="get">
      <div class="logo"><img src="/assets/images/logo.png" width="379" height="96" /></div>
      <div class="seach"><input name="" type="text"  class="search-input"/>
    <input name="" type="image" src="/assets/images/seachbtn.png" class="search-btn"/></div>
      </form>
    </div>
<a href="#" class="touch-l"></a>
  <a href="#" class="touch-r"></a>
  <div class="main04 pt150 mb143">
       <div class="retrieve-title"><img src="/assets/images/retrievetitle02.png" width="275" height="93" /></div>
       <div class="retrieve-main">
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <input type="hidden" name="touch_redirect_to" value="<%= mobile_users_email_reset_password_succcess_path %>">
         <h2>已发送重置密码方式到该邮箱，请按照流程操作。</h2>
         <input id="user_reset_password_token" name="user[reset_password_token]" type="hidden" value="<%= @reset_password_token %>" />

         <div class="line"><img src="/assets/images/retrieve05.jpg" width="1007" height="65" /></div>
         <div class="retrieve02">
                <div class="retrieveverify02">输入新密码：</div>
                <div class="selectbg-left"></div>
                <div class="retrieve-center _parent_tip">
                <%= f.password_field :password, :class => "retrieve-input" %>
                </div><div class="selectbg-right02"></div>
              <div class="wrongtips03 _tip_field">
              </div>
             </div>
         <div class="retrieve02">
                <div class="retrieveverify02">重复新密码：</div>
                <div class="selectbg-left"></div>
                <div class="retrieve-center _parent_tip">
                <%= f.password_field :password_confirmation, :class => "retrieve-input" %>
                </div>
                <div class="selectbg-right02"></div>
                <div class="wrongtips03 _tip_field">
                </div>
           </div>
         <div class="nextbtn"><input name="" type="image" src="/assets/images/next.jpg" class="loginbtn"/></div>
         <% end %>
      </div>
    </div>
  <%= render :partial => "layouts/bottom_buttons" %>
</div>

<%= javascript_include_tag "plugins/validate/jquery.validate" %>
<%= javascript_include_tag "plugins/validate/jquery-validate-setting" %>

<script type="text/javascript">
  $("#new_user").validate({
    onfocusout: function(element){
      this.element(element);
    },
    rules: {
      'user[password]':{
        required: true,
        minlength: 6,
        maxlength: 12
      },
      'user[password_confirmation]' :{
        required: true,
        minlength: 6,
        maxlength: 12,
        equalTo: '#user_password'
      }
    },
    messages: {
      'user[password_confirmation]' :{
        equalTo: '两次输入密码不一致'
      }
    }

  });

</script>
