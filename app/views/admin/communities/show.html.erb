<div class="row-fluid">
  <div class="span12">
    <div class="widget">
      <div class="widget-head">
        <div class="pull-left">小区</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <p><b>名称:</b><%= @community.name %></p>
        <p><b>地址:</b><%=  @community.address%></p>
        <p><b>备注:</b><%= @community.description %></p>
        <%= link_to '编辑', edit_admin_district_community_path(@community), class: "btn btn-small btn-primary" %>
        <%= link_to '返回', admin_district_communities_path, class: "btn btn-small" %>
      </div>
    </div>
  </div>
</div>
