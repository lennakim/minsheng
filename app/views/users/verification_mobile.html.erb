
<div style="margin-top:30px" ></div>
<div>
  <label for="user_mobile">输入手机号</label>
  <input type="text" name="mobile" id="mobile" value="<%= @user.mobile %>">
  <input type="button" id="sendCaptchaCodeBtn" class="btn" value="发送验证码" url="<%=sent_mobile_captcha_code_user_path %>">
  <br/>


  <label for="user_mobile_captcha_code">输入验证码</label>
  <input type="text" name="captcha_code" id="captcha_code" >
  <input type="button" id="verifyBtn" class="btn" value="验证" url="<%= verify_user_path %>">

</div>
<%= content_for :foot do %>
  <script>

    $("#sendCaptchaCodeBtn").bind('click',function(){
      var mobile = $("#mobile").val();
      var url = $(this).attr("url");

      $.ajax({
        url: url,
        type: 'GET',
        data: { mobile: mobile },
        success: function(data){
          alert(data.message)
        }
      });
    });

    $("#verifyBtn").bind('click',function(){
      var captcha_code = $("#captcha_code").val();
      var url = $(this).attr("url");

      $.ajax({
        url: url,
        type: 'GET',
        data: { captcha_code: captcha_code },
        success: function(data){
          alert(data.message)
        }
      });
    });

  </script>
<% end %>
