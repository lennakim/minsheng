<% content_for :head do %>
  <%= stylesheet_link_tag "lib/jRating.jquery" %>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="widget">
      <div class="widget-head">
        <div class="pull-left">Rates</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <p><b>用户:</b><%= @rate.user.name %></p>
        <p><b>评分:</b><div class="star" data-average="<%= @rate.rank ||= 0 %>" ></div></p>
        <p><b>评论:</b><%= @rate.comment %></p>
        <% if can? :edit, @rate %>
        <%= link_to '编辑', edit_shop_rate_path(@shop,@rate), class: "btn btn-small btn-primary" %>
        <% end %>
        <%= link_to '返回', shop_rates_path(@shop), class: "btn btn-small" %>
      </div>
    </div>
  </div>
</div>
<% content_for :foot do %>
  <%= javascript_include_tag "lib/jRating.jquery" %>
  <%= javascript_include_tag "minsheng/rates.js" %>
<% end %>