<% content_for :head do %>
  <%= stylesheet_link_tag "jRating.jquery" %>
<% end %>
<h1>Listing rates</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rates.each do |rate| %>
  <tr>
    <td><div class="star" data-average="<%= rate.rank %>"></div></td>
    <td><%= rate.comment %></td>
    <td><%= link_to '显示', admin_shop_rate_path(@shop,rate) %></td>
    <td><%= link_to '编辑', edit_admin_shop_rate_path(@shop, rate) %></td>
    <td><%= link_to '删除', admin_shop_rate_path(@shop,rate), method: :delete, data: { confirm: '确定删除么' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加', new_admin_shop_rate_path %>

<% content_for :foot do %>
  <%= javascript_include_tag "jRating.jquery" %>
  <script type="text/javascript">
    $(document).ready(function() {

      var options = {
        bigStarsPath: '/assets/jRating/stars.png',
        smallStarsPath: '/assets/jRating/small.png',
        type : 'big',
        decimalLength: 0,
        length: 5,
        rateMax: 5,
        showRateInfo: false,
        sendRequest: false,
        step: true,
        //
        isDisabled: true,

      }

      $(".star").jRating(options);
    });
  </script>
<% end %>