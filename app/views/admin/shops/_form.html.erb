<% content_for :head do %>
  <%= stylesheet_link_tag "jquery.tagit" %>
<% end %>

<%= form_for [:admin,@shop] do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br />
    <%= f.hidden_field :tag_list,:value=>@shop.tag_list %>
    <ul id="tags"></ul>
   <h4>All tags</h4>
    <% Tag.all.each do |tag| %>
      <span name="sampletag" class="label"><%= tag.name %></span>
      <% end %>
  </div>
  <div>
    <h4>upload images</h4>
     <%= f.fields_for :shopImages  do |image| %>
      <div class="field">
         <%= image.file_field :url  %>
      </div>
     <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% content_for :foot do %>
  <%= javascript_include_tag "tag-it" %>
  <script type="text/javascript">
    $(document).ready(function() {
          $('#tags').tagit({
                // availableTags: sampleTags,
                // This will make Tag-it submit a single form value, as a comma-delimited field.
                singleField: true,
                singleFieldNode: $('#shop_tag_list')
          });
          $("span[name='sampletag']").on('click',function(){
            // console.log($(this).text());
            $("#tags").tagit("createTag", $(this).text()); 
          });
    });
  </script>
<% end %>
