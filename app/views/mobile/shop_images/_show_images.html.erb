<div class="_center_partial" style="postion: relative;">
  <div href="#" class="preferential-xiangqing _title_message">商家图片</div>
  <div class="preferential-xiangqingmain _image_partial">
    <% shop_images.each do |shop_image| %>
      <div class="pre-img">
        <a href="#"><img src="<%=shop_image.image.url%>" width="257" height="182" /></a>
        <a href="#" class=""><%= shop_image.name %></a>
      </div>
    <% end %>
  </div>
  <div class="up-down">
    <% if is_next_image || is_previous_image %>
      <a href="javascript:" id="next_image" data-is-next="<%= is_next_image %>" data-url="<%= show_images_mobile_shop_images_path(is_next: true, shop_id: shop_id, next_image: shop_images.last.id)%>">
        <img src="/assets/mobile/preferential08.png" width="100" height="32" />
      </a>
      <a href="javascript" id="previous_image" data-is-previous="<%= is_previous_image %>" data-url="<%= show_images_mobile_shop_images_path(is_previous: true, shop_id: shop_id, next_image: shop_images.first.id)%>">
        <img src="/assets/mobile/preferential09.png" width="100" height="32" />
      </a>
    <% end %>
  </div>
</div>
