<div>
  已读消息
    <table>
      <tr>
        <th>Title</th>
      </tr>

    <% @read_notifications.each do |notification| %>
      <tr>
        <td><%= link_to notification.title, notification %></td>
        <td><%= link_to '显示', notification %></td>
      </tr>
    <% end %>
    </table>
</div>


<div>
  未读消息
    <table>
      <tr>
        <th>Title</th>
        <th></th>
      </tr>

    <% @not_read_notifications.each do |notification| %>
      <tr>
        <td><%= link_to notification.title, notification %></td>
        <td><%= link_to '设定已读', have_read_notification_path(notification), method: :put %></td>`
      </tr>
    <% end %>
    </table>
</div>

