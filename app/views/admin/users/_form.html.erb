<%= form_for([:admin,@user], :html => { :class=> "form-horizontal uni"}) do |f| %>
  <div class="control-group">
    <%= f.label :name, "用户名", class: "control-label"%>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, "邮箱地址", class: "control-label"%>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "保存", class: "btn btn-small btn-primary" %>
    <%= link_to "返回", admin_users_path, class: "btn btn-small" %>
  </div>
<% end %>