<div class="row">
  <span>分类:</span>
    <% Category.all.each do |category| %>
      <span><a href="/categories/<%= category.id %>"><%= category.name %></a> </span>
  <% end %>
  <br />
  <span>标签:</span>
    <% Tag.all.each do |tag| %>
    <span class="label"><%= tag.name %></span>
  <% end %>
    </div>
  <div class="row">
    <table class="table">
      <tr>
            <th>图片</th>
            <th>标题</th>
            <th>所属分类</th>
            <th>电话</th>
            <th>地址</th>
            <th>标签</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>

      <% @shops.each do |shop| %>
        <tr>
              <td><img src="<%= shop.shopImages.first.image if shop.shopImages.first %>" alt="" style="width:100px;height:100px;"/></td>
              <td><%= shop.title %></td>
              <td><%= shop.category.name if shop.category %></td>
              <td><%= shop.phone %></td>
              <td><%= shop.address %></td>
              <td><%= raw shop.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></td>
               <td></td>

               <td><%= shop.rates.count %></td>

              <td><%= link_to '显示', shop_path(shop) %></td>
      </tr>
    <% end %>
    </table>

</div>
    </div>
  </div>
</div>

<%= link_to "生成二维码", qrcodes_qrcode_path(:qr_content => "你好") %>
