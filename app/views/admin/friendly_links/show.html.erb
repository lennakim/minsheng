<div class="row-fluid">
  <div class="span12">
    <div class="widget">
      <div class="widget-head">
        <div class="pull-left">查看友情链接</div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <p><b>名称：</b><%= @friendly_link.name %></p>
        <p><b>路径：</b><%= @friendly_link.url %></p>
        <p><b>排序：</b><%= @friendly_link.sort %></p>

        <%= link_to '编辑', edit_admin_friendly_link_path(@friendly_link), class: 'btn btn-primary btn-small' %>
        <%= link_to '返回', admin_friendly_links_path, class: 'btn btn-small' %>
      </div>
    </div>
  </div>
</div>
