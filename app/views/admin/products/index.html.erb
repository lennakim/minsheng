<div class="row-fluid">

  <div class="span12">

    <div class="widget">

      <div class="widget-head">
        <div class="pull-left">商品管理</div>
        <div class="pull-right"><%= link_to '新建商品', new_admin_product_path, class: 'btn btn-primary btn-small' %></div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">


        <table class="table table-striped table-bordered table-hover">

          <tr>
            <th></th>
            <th>Name</th>
            <th>Shop</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @products.each do |product| %>
            <tr>
            <td><img src="<%= product.productImages.first.url if  product.productImages.first%>" alt="" style="width:100px;height:100px;" /></td>
            <td><%= product.name %></td>
            <td><%= product.shop_id %></td>
            <td><%= link_to 'Show', admin_product_path(product) %></td>
            <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
            <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
