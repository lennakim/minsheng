<% content_for :head do %>
  <%= stylesheet_link_tag "jRating.jquery" %>
<% end %>

<%= form_for([@shop,@rate], :html => { :class=> "form-horizontal uni" }) do |f| %>
  <div class="control-group">
    <%= f.hidden_field :rank %>
    <div id="rate_star" class="controls" data-average="<%= @rate.rank ||= 0 %>"></div>
  </div>
  <div class="control-group">
    <%= f.label :comment, "评论", class: "control-label"%>
    <div class="controls">
      <%= f.text_area :comment %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "保存", class: "btn btn-small btn-primary" %>
    <%= link_to "返回", shop_rates_path, class: "btn btn-small" %>
  </div>
<% end %>