<h1 class="page-name">公告管理</h1>
 <%= link_to '新建公告', new_admin_notice_path, class: 'btn btn-primary btn-small', style: 'float:right' %>

<div class="dkc-content words-content">
  <div class="book-bg">
    <div class="news-content">
      <div class="cont">
        <div id='notices_container'>
          <table>
			  <thead>
			    <tr>
			      <th>序号</th>
			      <th>标题</th>
			      <th>类型</th>
			      <th>操作</th>
			    </tr>
			  </thead>
			  <% @notices.each_with_index do |notice, idx| %>
			    <tr>
			      <td><%= idx+1 %></td>
			      <td class="left">
			        <%= link_to notice.title, admin_notice_path(notice), class: 'bluelink' %>
			      </td>
			      <td><%= notice.tag_type %></td>
			      <td>
                    <%= link_to '编辑', edit_admin_notice_path(notice), class: 'bluelink' %>
                    &nbsp;
                    <%= link_to '删除', admin_notice_path(notice), method: :put, class: 'bluelink' %>
			      </td>
			    </tr>
			  <% end %>
			</table>
			<div class="clearfix"></div>
			
        </div>
      </div>
    </div>
  </div>
</div>