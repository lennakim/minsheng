<div class="row-fluid">

  <div class="span12">

    <div class="widget">

      <div class="widget-head">
        <div class="pull-left">商店管理</div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">


        <table class="table table-striped table-bordered table-hover">
          <tr>
            <th>图片</th>
            <th>标题</th>
            <th>所属分类</th>
            <th>电话</th>
            <th>地址</th>
            <th>标签</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @shops.each do |shop| %>
            <tr>
              <td><img src="<%= shop.shopImages.first.url if shop.shopImages.first %>" alt="" style="width:100px;height:100px;"/></td>
              <td><%= shop.title %></td>
              <td><%= shop.category.name if shop.category %></td>
              <td><%= shop.phone %></td>
              <td><%= shop.address %></td>
              <td><%= raw shop.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></td>
              <td><%= link_to '显示', admin_shop_path(shop) %></td>
              <td><%= link_to '编辑', edit_admin_shop_path(shop) %></td>
              <td><%= link_to '删除', admin_shop_path(shop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </table>
        <br/>

        <%= link_to '新建商店', new_admin_shop_path, class: 'btn btn-primary btn-small' %>

        <div class="widget-foot">
          <h3><%= paginate @shops %></h3>
        </div>

      </div>
    </div>
  </div>
</div>


