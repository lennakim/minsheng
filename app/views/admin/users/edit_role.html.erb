<div class="row-fluid">
  <div class="span12">
    <div class="widget">

      <div class="widget-head">
        <div class="pull-left">Form</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <%= form_for([:admin,@user], url: { action: :update_role },:html => { :class=> "form-horizontal uni"}) do |f| %>

          <div class="control-group">
            <%= f.label :role, "角色", class: "control-label"%>
            <div class="controls">
              <%= f.select(:role, User::ROLES.map{|r| r.invert.to_a.flatten }, :selected => (@user.role)) %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "保存", class: "btn btn-small btn-primary" %>
            <%= link_to "返回", admin_users_path, class: "btn btn-small" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
