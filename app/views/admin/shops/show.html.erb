<% content_for :head do %>
  <%= stylesheet_link_tag "jRating.jquery"%>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="widget">

      <div class="widget-head">
        <div class="pull-left">查看商店</div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <%= @shop.id %>
        <p>
          <b>标题:</b>
          <%= @shop.title %>
        </p>

        <p><b>电话:</b> <%= @shop.phone %></p>

        <p>
          <b>地址:</b>
          <%= @shop.address %>
        </p>
        <p>
          <b>标签:</b>
          <%= @shop.tag_list %>
        </p>
        <p>
          <b>图片</b>
          <% @shop.shopImages.each do |image| %>
            <img src="<%= image.url %>" alt="" />
          <% end %>
        </p>
        <%= link_to '编辑', edit_admin_shop_path(@shop), class: 'btn btn-small btn-primary' %>
        <%= link_to '返回', params[:from_recommendation] == 'true' ? admin_shop_recommendations_path : admin_shops_path,
          class: 'btn btn-small' %>
      </div>
      <% unless @rates.count == 0 %>
      <div class="rates" style="margin-top:20px;">
        <%= render 'admin/rates/rate_list', :rates => @rates %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :foot do %>
  <%= javascript_include_tag "minsheng/jRating.jquery" %>
  <%= javascript_include_tag "minsheng/rates.js" %>
<% end %>
