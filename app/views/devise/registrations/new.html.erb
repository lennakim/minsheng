<h2>邮箱注册</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <p><%= f.label :name, "用户名" %>
      <br/>
      <%= f.text_field :name, id: 'testb', onfocusin: "VirtualKeyboard.toggle('testb','td');return false;" %></p>

    <div><%= f.label :email, "邮箱" %>
      <br/>
      <%= f.email_field :email %></div>

    <div><%= f.label :password, "密码" %>
      <br/>
      <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation, "确认密码" %>
      <br/>
      <%= f.password_field :password_confirmation %></div>

    <div><%= f.submit "立即注册" %></div>
<% end %>

<%= render "devise/shared/links" %>

<div id='td'></div>

<script type="text/javascript" src="/assets/plugins/virtual-keyboard/vk_loader.js?vk_layout=CN Chinese Simpl. Pinyin&vk_skin=small" ></script>
