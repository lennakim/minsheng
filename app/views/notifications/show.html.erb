<div class="row-fluid">
  <div class="span12">
    <div class="widget">
      <div class="widget-head">
        <div class="pull-left">Notifications</div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
          <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="widget-content">
        <p><b>发送给:</b><%= view_user_name(@notification.receiver) %></p>
        <p><b>标题:</b><%= @notification.title %></p>
        <p><b>内容:</b><%= @notification.content %></p>
        <% if can? :edit, @notification, %>
          <%= link_to '编辑', edit_notification_path(@notification), class: "btn btn-small btn-primary" %>
        <% end %>
        <% if can? :reply, @notification %>
          <%= link_to '回复', reply_notification_path(@notification), class: "btn btn-small btn-primary" %>
          <% end %>
        <%= link_to '返回', notifications_path, class: "btn btn-small" %>
      </div>
    </div>
  </div>
</div>
